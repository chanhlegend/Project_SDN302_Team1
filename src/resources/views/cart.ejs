<html>

<head>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .checkbox-wrapper-23 *,
        .checkbox-wrapper-23 *:after,
        .checkbox-wrapper-23 *:before {
            box-sizing: border-box;
        }

        .checkbox-wrapper-23 input {
            position: absolute;
            opacity: 0;
        }

        .checkbox-wrapper-23 input:checked+label svg path {
            stroke-dashoffset: 0;
        }

        .checkbox-wrapper-23 input:focus+label {
            transform: scale(1.03);
        }

        .checkbox-wrapper-23 input+label {
            display: block;
            border: 2px solid #333;
            width: 20;
            height: 20;
            border-radius: 6px;
            cursor: pointer;
            transition: all .2s ease;
        }

        .checkbox-wrapper-23 input+label:active {
            transform: scale(1.05);
            border-radius: 12px;
        }

        .checkbox-wrapper-23 input+label svg {
            pointer-events: none;
            padding: 5%;
        }

        .checkbox-wrapper-23 input+label svg path {
            fill: none;
            stroke: #333;
            stroke-width: 4px;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke-dasharray: 100;
            stroke-dashoffset: 101;
            transition: all 250ms cubic-bezier(1, 0, .37, .91);
        }

        .footer-fixed {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #abb2c0;
            padding: 10px 0;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
        }

        .footer-content {
            display: flex;
            justify-content: start;
            align-items: center;
        }

        .footer-content form {
            display: flex;
            align-items: center;
        }

        .footer-content button {
            margin-left: 10px;
        }
    </style>
</head>

<body class="bg-white text-black">
    <!-- Include Header -->
    <%- include('partials/header') %>
        <div class="container mx-auto p-4">
            <div class="overflow-x-auto">
                <% if (cartItems.length===0 && message) { %>
                    <div class="bg-yellow-200 text-yellow-700 p-4 rounded mb-4">
                        <%= message %>
                    </div>
                    <% } %>
                        <table class="min-w-full bg-white border">
                            <thead>
                                <tr class="w-full bg-gray-100 border-b">
                                    <th class="py-2 px-4 text-left">
                                        Chọn
                                    </th>
                                    <th class="py-2 px-4 text-left">
                                        Sản Phẩm
                                    </th>
                                    <th class="py-2 px-4 text-left">
                                        Mô tả
                                    </th>
                                    <th class="py-2 px-4 text-left">
                                        Giá tiền
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cartItems.forEach(cartItem=> { %>
                                    <tr class="border-b">
                                        <td class="py-4 px-4">
                                            <div class="checkbox-wrapper-23">
                                                <input type="checkbox" id="checkbox-<%= cartItem._id %>"
                                                    name="cart-item" value="<%= cartItem._id %>"
                                                    data-price="<%= cartItem.price %>" class="checkbox-item">
                                                <label for="checkbox-<%= cartItem._id %>">
                                                    <svg width="20" height="20" viewBox="0 0 20 20">
                                                        <path d="M4 10l3 3L16 6" />
                                                    </svg>
                                                </label>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <img alt="<%= cartItem.productName %>" class="w-16 h-16 mr-4" height="100"
                                                src="<%= cartItem.image %>" width="100" />
                                            <div>
                                                <div>
                                                    <%= cartItem.productName %>
                                                </div>
                                                <div class="text-gray-500">
                                                    <%= cartItem.sellerId.name %>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <%= cartItem.description %>
                                        </td>
                                        <td class="py-4 px-4">
                                            <%= cartItem.price %> VND
                                        </td>
                                    </tr>
                            </tbody>
                            <% }) %>
                        </table>
            </div>

            <div class="flex justify-between items-center mt-4">
                <button class="bg-black text-white py-2 px-4">
                    <a href="/">CONTINUE SHOPPING</a>
                </button>

            </div>
        </div>


        <div class="footer-fixed bg-gray-100 p-4">
            <div class="footer-content container mx-auto flex justify-between gap-4">

                <!-- Cột 1: Checkbox Chọn Tất Cả -->
                <div class="w-1/3 bg-white p-4 shadow rounded flex items-center">
                    <input type="checkbox" id="select-all" class="checkbox-item w-5 h-5 mr-2">
                    <label for="select-all" class="font-semibold text-lg">Chọn tất cả</label>
                </div>

                <!-- Cột 2: Nút Xóa Sản Phẩm -->
                <div class="w-1/5 bg-white p-4 shadow rounded">
                    <form action="/cart/remove" method="POST" id="delete-form">
                        <input type="hidden" name="productIds" id="selected-products" value="" />
                        <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded w-full">
                            Xóa
                        </button>
                    </form>
                </div>

                <!-- Cột 3: Tổng tiền và Thanh toán -->
                <div class="w-1/3 bg-white p-4 shadow rounded">
                    <div class="border-b pb-2 mb-2">
                        <p>Số lượng sản phẩm đã chọn: <span id="total-count">0</span></p>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span>Shipping</span>
                        <span>7.000 đ</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <strong>Tổng tiền: <span id="total-price">0 VND</span></strong>
                    </div>
                    <form action="/checkout" method="POST" >
                        <button type="submit" class="bg-black text-white w-full py-2 mt-2">
                            PROCEED TO CHECKOUT
                        </button>
                    </form>
                    
                </div>

            </div>
        </div>



        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const selectAllCheckbox = document.getElementById("select-all");
                const itemCheckboxes = document.querySelectorAll(".checkbox-item:not(#select-all)");
                const totalPriceElement = document.getElementById("total-price");
                const totalCountElement = document.getElementById("total-count");
                const deleteForm = document.getElementById("delete-form");
                const selectedProductsInput = document.getElementById("selected-products");

                function updateTotal() {
                    let selectedProducts = [];
                    let totalPrice = 0;
                    let totalCount = 0;
                    let addedBonus = false;

                    itemCheckboxes.forEach((checkbox) => {
                        if (checkbox.checked) {
                            selectedProducts.push(checkbox.value);
                            const price = parseFloat(checkbox.getAttribute("data-price")) || 0;
                            totalPrice += price;
                            totalCount += 1;

                            if (!addedBonus) {
                                totalPrice += 7000; 
                                addedBonus = true;
                            }
                        }
                    });

                    // Cập nhật giá trị input ẩn với danh sách productId đã chọn (dạng JSON)
                    selectedProductsInput.value = JSON.stringify(selectedProducts);

                    // Cập nhật tổng tiền và số lượng sản phẩm
                    totalPriceElement.innerText = totalPrice.toLocaleString() + " VND";
                    totalCountElement.innerText = totalCount.toLocaleString();
                }

                // Khi nhấn "Chọn tất cả", chọn hoặc bỏ chọn tất cả sản phẩm
                selectAllCheckbox.addEventListener("change", function () {
                    itemCheckboxes.forEach((checkbox) => {
                        checkbox.checked = selectAllCheckbox.checked;
                    });
                    updateTotal();
                });

                // Khi một checkbox sản phẩm thay đổi, kiểm tra trạng thái "Chọn tất cả"
                itemCheckboxes.forEach((checkbox) => {
                    checkbox.addEventListener("change", function () {
                        selectAllCheckbox.checked = [...itemCheckboxes].every((cb) => cb.checked);
                        updateTotal();
                    });
                });

                // Kiểm tra giá trị trước khi submit form
                deleteForm.addEventListener("submit", function (event) {
                    if (!selectedProductsInput.value || selectedProductsInput.value === "[]") {
                        event.preventDefault(); // Ngăn submit nếu không có sản phẩm nào được chọn
                        alert("Vui lòng chọn ít nhất một sản phẩm để xóa!");
                    }
                });
            });

        </script>
</body>

</html>