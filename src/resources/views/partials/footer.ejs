<html>
  <head>
    <title>Footer Section</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #1c1c1c;
        color: #fff;
      }
      .footer {
        background-color: #1c1c1c;
        padding: 20px 0;
        color: #fff;
      }
      .footer .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 0 20px;
      }
      .footer .container > div {
        flex: 1;
        margin: 10px;
      }
      .footer .container .info {
        max-width: 300px;
      }
      .footer .container .info p {
        margin-top: 20px;
      }
      .footer .container .info .contact {
        margin-bottom: 20px;
        display: flex;
        align-items: center;
      }
      .footer .container .info .contact i {
        font-size: 24px;
        margin-right: 10px;
      }
      .footer .container .info .social-icons {
        display: flex;
        margin-top: 10px;
      }
      .footer .container .info .social-icons a {
        color: #fff;
        margin-right: 10px;
        font-size: 18px;
      }
      .footer .container .links {
        display: flex;
        justify-content: space-between;
        flex: 2;
      }
      .footer .container .links div {
        margin: 0 20px;
      }
      .footer .container .links h3 {
        margin-bottom: 10px;
      }
      .footer .container .links ul {
        list-style: none;
        padding: 0;
      }
      .footer .container .links ul li {
        margin-bottom: 5px;
      }
      .footer .container .links ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: 300;
      }
      .footer .container .links .app-links {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .footer .container .links .app-links img {
        width: 150px;
        margin-bottom: 20px;
        margin-top: 20px;
      }
      .footer .bottom-bar {
        background-color: #333;
        padding: 10px 20px;
        text-align: center;
        font-size: 14px;
      }
      .footer .bottom-bar .payment-icons img {
        width: 50px;
        margin: 0 5px;
      }
      .footer .bottom-bar .links {
        margin: 10px 0;
      }
      .footer .bottom-bar .links a {
        color: #fff;
        text-decoration: none;
        margin: 0 10px;
      }
      @media (max-width: 768px) {
        .footer .container {
          flex-direction: column;
          align-items: center;
        }
        .footer .container .links {
          flex-direction: column;
          align-items: center;
        }
        .footer .container .links div {
          margin: 10px 0;
        }
      }
    </style>
  </head>
