<html>
  <head>
    <title>Information User</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      .changpassword-container {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .container-form {
        background-color: white;
        width: 60%;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      .header-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
      }
      .profile-img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
      }
      .profile-name {
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0;
      }
      .info {
        text-align: left;
        margin: 20px 0;
      }
      .info label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
      }
      .info input {
        width: calc(100% - 60px);
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .info .show-btn {
        padding: 10px;
        background-color: #ccc;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .info .show-btn:hover {
        background-color: #bbb;
      }
      .info .value {
        margin-bottom: 10px;
      }
      .edit-btn {
        padding: 10px 20px;
        background-color: #333;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .edit-btn:hover {
        background-color: #555;
      }
      @media (max-width: 768px) {
        .container-form {
          width: 90%;
        }
      }
    </style>
  </head>
  <body style="margin: 0;">
    <!-- Include Header -->
    <%- include('partials/header') %>
    <div class="changpassword-container">
      <div class="container-form">
        <div class="header-title">Thay đổi mật khẩu</div>
        <img
          alt="Profile picture of the user"
          class="profile-img"
          height="100"
          src="<%= user.avatar %>"
          width="100"
        />
        <div class="profile-name"><%= user.name %></div>
        <% if(error) {%>
        <p style="color: red;"><%= error %></p>
        <% } %>
        <div class="info">
          <form action="/user/account/changePassword" method="POST">
            <label for="oldpassword"> Mật khẩu cũ </label>
            <input id="oldpassword" type="password" name="oldpassword" />

            <label for="newpassword"> Mật khẩu Mới </label>
            <input id="newpassword" type="password" name="newpassword" />

            <label for="repassword"> Xác nhận mật khẩu mới </label>
            <input id="repassword" type="password" name="repassword" />

            <button class="edit-btn">Lưu</button>
          </form>
        </div>
      </div>
    </div>
    <!-- Include Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
