        text-decoration: none;
      }
      .breadcrumb a:hover {
        text-decoration: underline;
      }
      .product {
        display: flex;
        flex-wrap: wrap;
      }
      .product img {
        max-width: 100%;
        height: auto;
        max-height: 500px;
      }
      .product-details {
        flex: 1;
        padding: 20px;
      }
      .product-title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 10px;
      }
      .product-rating {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
      }
      .product-rating i {
        color: #f5c518;
      }
      .product-price {
